@model Lectures

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecture Videos</title>
    <!-- إضافة Bootstrap -->
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <style>
        /* الخلفية */
        body {
            background-color: #d4edda; /* خلفية خضراء فاتحة */
            color: #333; /* نص داكن */
            font-family: 'Arial', sans-serif;
            padding-top: 20px;
        }

        /* العنوان الرئيسي */
        h1 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: #155724; /* أخضر داكن */
            text-align: center;
        }

        /* تصميم الكروت */
        .card {
            border: 1px solid #c3e6cb; /* أخضر فاتح */
            border-radius: 8px;
            padding: 15px;
            background-color: #ffffff; /* خلفية الكارت بيضاء */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        /* الفيديو */
        iframe {
            border-radius: 8px;
            border: 1px solid #c3e6cb; /* إطار أخضر فاتح */
        }

        /* الأزرار */
        .btn-custom {
            background-color: #28a745; /* أخضر */
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 15px;
            font-size: 0.9rem;
            font-weight: bold;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #218838; /* أخضر داكن */
            }

        /* تنسيق الحاوية */
        .container {
            max-width: 1000px;
            margin: 30px auto;
        }

        /* تصميم العرض الجانبي */
        .row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .col-md-4 {
            flex: 1 1 30%; /* عرض الكروت بجانب بعض */
            max-width: 30%;
        }

    </style>
</head>
<body>
    <div class="container">
        <h1>Lecture Videos</h1>
        <div class="row">
            @foreach (string link in Model.LectureLinks)
            {
                <div class="col-md-4">
                    <div class="card">
                        <!-- عرض الفيديو -->
                        <iframe class="w-100" height="315" src="@link" frameborder="0" allowfullscreen></iframe>
                        <!-- زر ينقل إلى YouTube -->
                        <div class="text-center mt-3">
                            <a href="@link" target="_blank" class="btn btn-custom">Watch on YouTube</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- إضافة Bootstrap JS -->
   @*  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script> *@
</body>
</html>
